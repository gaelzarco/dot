* {
    font: "GeistMono Nerd Font Regular 11";
    g-spacing: 10px;
    g-margin: 0;
    b-color: rgba(0,0,0,0.5);
    fg-color: #FFF;
    fgp-color: #afafafcc;
    b-radius: 10px;
    g-padding: 6px;
    hl-color: #000000;
    hlt-color: #FFFFFF;
    alt-color: #111111FF;
    wbg-color: #000000;
    w-border: 1px solid;
    w-border-color: rgba(86,86,86,0.8);
    w-padding: 8px;
}

configuration {
    modi: "drun,filebrowser,games";
    show-icons: true;
    display-filebrowser: "";
    display-drun: "";
    display-games: "";
}

listview {
    columns: 2;
    lines: 6;
    fixed-height: true;
    fixed-columns: true;
    cycle: false;
    scrollbar: false;
    border: 0px solid;
    border-radius: @b-radius;
    border: @w-border;
    border-color: @w-border-color;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.6);
}

window {
    width: 600px;
    border-radius: @b-radius;
    border: 0px solid;
    border-color: @w-border-color;
    background-color: rgba(0, 0, 0, 0);
    border: @w-border;
    border-color: @w-border-color;
    background-color: rgba(0, 0, 0, 0.6);
}

prompt {
    text-color: @fg-color;
}

inputbar {
    children: ["prompt", "entry"];
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 100px;
    border: @w-border;
    border-color: @w-border-color;
}

entry {
    padding: 10px 20px;
    placeholder: "Search";
    text-color: @fg-color;
    placeholder-color: @fgp-color;
}

mainbox {
    spacing: @g-spacing;
    padding: @g-padding;
    children: ["inputbar", "listview"];
}

element {
  spacing: @g-spacing;
  margin: @g-margin;
  padding: @g-padding;
  border: 0px solid;
  border-radius: @b-radius;
  border-color: @b-color;
  background-color: transparent;
  text-color: @fg-color;
  border: 1px solid;
  border-radius: 100px;
  border-color: rgba(0, 0, 0, 0.0);
}

element normal.normal {
	background-color: transparent;
	text-color: @fg-color;
}

element alternate.normal {
	background-color: transparent;
	text-color: @fg-color;
}

element selected.active {
	background-color: rgba(0,0,0,0.5);
	text-color: @hlt-color;
  border: 1px solid;
  border-color: rgba(89,89,89,0.5);
}

element selected.normal {
	background-color: rgba(0,0,0,0.8);
	text-color: @hlt-color;
  border: 1px solid;
  border-color: rgba(89,89,89,0.5);
}

message {
  background-color: transparent;
	text-color: @hlt-color;
  border: 1px solid;
  border-color: rgba(89,89,89,0.5);
  border-radius: @b-radius;
  padding: @g-padding;
  background-color: rgba(0, 0, 0, 0.6);
}
