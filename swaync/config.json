{
  "positionx": "center",
  "positiony": "top",
  "layer": "overlay",
  "nontrol-center-layer": "top",
  "layer-shell": true,
  "csspriority": "application",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 5,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 32,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 5,
  "timeout-low": 3,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "relative-timestamps": true,
  "24-hour": true,
  "control-center-width": 460,
  "control-center-height": 750,
  "notification-window-width": 400,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 20,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "mpris",
    "inhibitors",
    "notifications",
    "buttons-grid"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "inhibitors",
      "button-text": "clear",
      "clear-all-button": true
    },
    "title": {
      "text": "Control Center",
      "clear-all-button": true,
      "button-text": "◯"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 10,
      "show-album-art": "never",
      "autohide": true
    },
    "label": {
      "max-lines": 5,
      "text": "Control Center"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "● DnD",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $swaync_toggle_state == true ]] && swaync-client -dn || swaync-client -df'"
        },
        {
          "label": "⟳ Restart",
          "command": "sh -c 'systemctl reboot'",
          "enum": "normal"
        },
        {
          "label": "◌ Suspend",
          "command": "sh -c 'systemctl suspend'",
          "enum": "normal"
        },
        {
          "label": "○ Power",
          "command": "sh -c 'systemctl poweroff'",
          "enum": "normal"
        }
      ]
    },
    "slider#backlight": {
      "label": "󰃟",
      "max_limit": 86,
      "min_limit": 1,
      "min": 0,
      "max": 100,
      "cmd_setter": "~/.config/hypr/script/utils.sh swaync_backlight set $value",
      "cmd_getter": "~/.config/hypr/script/utils.sh swaync_backlight get"
    }
  }
}
